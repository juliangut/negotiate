{
  "name": "juliangut/negotiate",
  "description": "Negotiation middleware",
  "keywords": [
    "negotiator",
    "middleware"
  ],
  "homepage": "https://github.com/juliangut/negotiate",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Julián Gutiérrez",
      "email": "juliangut@gmail.com",
      "homepage": "http://juliangut.com",
      "role": "Developer"
    }
  ],
  "support": {
    "source": "https://github.com/juliangut/negotiate",
    "issues": "https://github.com/juliangut/negotiate/issues"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.1",
    "ext-mbstring": "*",
    "psr/http-server-middleware": "^1.0",
    "willdurand/negotiation": "^3.1"
  },
  "require-dev": {
    "infection/infection": "~0.27",
    "juliangut/easy-coding-standard-config": "^1.11.1",
    "juliangut/phpstan-config": "^1.0",
    "laminas/laminas-diactoros": "^2.20",
    "overtrue/phplint": "^5.0|^6.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpmd/phpmd": "^2.13",
    "phpunit/phpunit": "^10.3",
    "povils/phpmnd": "^3.2",
    "roave/security-advisories": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Jgut\\Negotiate\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jgut\\Negotiate\\Tests\\": "tests/Negotiate/"
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "infection/extension-installer": true
    }
  }
}
